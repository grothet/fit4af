<h3>Benutzer</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th>Division</th>
      <th>Admin</th>
      <th>Sifa</th>
      <th>Vereantwortlicher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.id %></td>
        <td><%= user.division.bezeichnung if user.division_id.present?%></td>
        <td><%= user.admin %></td>
        <td><%= user.sifa %></td>
        <td><%= user.verantwortlich %></td>
        <td><%= link_to 'Anzeigen', user %></td>
        <td><%= link_to 'Ändern', edit_user_path(user) %></td>
        <td><%= link_to 'Löschen', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Neuen Benuter anlegen', new_user_path %>

