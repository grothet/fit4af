<h1>Aufgaben</h1>

<table>
  <thead>
    <tr>
      <th>Verantwortlicher</th>
      <th>Erstellt</th>
      <th>Beendet</th>
      <th>Ereigniss ID</th>
      <th>Unfall ID</th>
      <th>SAP Nr.</th>
      <th>MODI Nr.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= user_name(task.user_id).name %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.report_id if task.report_id.present? %></td>
        <td><%= task.accident_id if task.accident_id.present?  %></td>
        <td><%= task.sap_nr %></td>
        <td><%= task.modi_nr %></td>
        <td><%= link_to 'Anzeigen', task %></td>
        <td><%= link_to 'Ändern', edit_task_path(task) %></td>
        <td><%= link_to 'Löschen', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
