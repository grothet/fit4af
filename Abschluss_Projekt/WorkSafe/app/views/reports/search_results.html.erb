<h1>Gefundene Ereignisse</h1>
<%= link_to "Suchoptionen", search_path %>

<%= debug params %>

<% if @search_results.empty? %>
  <h6>Keie Ergebnisse gefunden </h6>
<%else%>
<table>
  <thead>
    <tr>
      <th>Meldender</th>
      <th>Wann</th>
      <th>Ort</th>
      <th>Beschr ort</th>
      <th>Ereignis</th>
      <th>Kategorie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_results.each do |report| %>
      <tr>
        <td><%= user_name(report.user_id).name%></td>
        <td><%= report.wann %></td>
        <td><%= report.place.bezeichnung if report.place_id.present? %></td>
        <td><%= truncate(report.beschr_ort, length: 20, separator: " ") %></td>
        <td><%= truncate(report.ereignis, length: 20, separator: " ") %></td>
        <td><%= report.category.titel if report.category_id.present? %></td>
        <td><%= link_to 'Show', report %></td>  
                    
        <% if report.user_id == session[:user_id] || current_user_admin?%>
          <td><%= link_to 'Edit', edit_report_path(report) %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%> 

      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>


<%= link_to 'New Report', new_report_path %> |
<%=link_to "Admin Bereich", admin_pages_index_path if current_user_admin?%>